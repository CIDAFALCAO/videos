    <body>
        <header class="row mx-auto my-auto p-1">
            <div class="col-sm-2 my-auto">
                <img src="../imagens/logovideo.png" class="w-50 mt-4 mb-0">
            </div>  
            <div class="col-sm-8 text-center my-auto">
                <h1 class="font-weight-bold mt-4 mb-0" style="font-size:30px; color:#5A18C9">SEU CONTEÚDO FAVORITO ESTÁ AQUI<BR>QUANDO QUISER E ONDE ESTIVER</h1>
            </div>
            <div class="col-sm-2 my-auto">
            </div>  
        </header>
        <nav class="navbar navbar-light mb-2">
            <hr style="height:1px; width:100%; border-width:0; background-color:#5A18C9">
            <form class="form-inline mx-auto">
                <a class="navbar-brand" href="/Home"><button class="btn btn-outline-dark btn-sm" type="button">Home</button></a>                    
                <a class="navbar-brand" href="/Produtos"><button class="btn btn-outline-dark btn-sm" type="button">Produtos</button></a>
                <a class="navbar-brand" href="/Promocoes"><button class="btn btn-outline-dark btn-sm"  type="button">Promoções</button></a>                    
                <a class="navbar-brand"><button class="btn btn-outline-dark btn-sm disabled" disabled>Contato</button></a>
                <a class="navbar-brand" href="Carrinho"><button class="btn btn-outline-dark btn-sm" type="button">Carrinho</button></a>                    
            </form>
        </nav>   
        <section class="container">
            <h1 class="text-center" style="background-color:#E0D1FA ;"><b>Formulário de Contato</b></h1>
            <article>
                <form id="formContato" action="/enviarChamado" method="post" class="w-50 mx-auto p-3 mt-4 mb-3" style="border:1px solid #ccc; border-radius: 12px;">                     
                    <fieldset>
                        <legend class="text-center"><b>Preencha as informações abaixo</b></legend>
                        <div class="form-group">
                            <label>Nome</label>
                            <input class="form-control" name="nomeContato" id="nomeContato" maxlength="50" required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" name="emailContato" id="emailContato" type="email" required>
                        </div>
                        <div class="form-group">
                            <label>Assunto</label>
                            <input class="form-control" name="assuntoContato" id="assuntoContato" maxlength="50" required>
                        </div>                    
                        <div class="form-group">
                            <label>Comentários<br /></label>
                            <textarea class="form-control" name="comentario" id="comentario" rows="8"></textarea> 
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="chamado" id="chamado" />
                            <label for="chamado">Quero abrir um chamado para este assunto.</label>
                        </div>
                        <div class="text-center">
                            <button id="btContato" type="submit" class="btn btn-info">Confirmar</button>
                        </div>
                    </fieldset>
                </form>
            </article>          
            <article>
                <h2 class="text-center mt-4 mb-2"><b>Contatos da equipe de Suporte</b></h2>
                <table class="mx-auto" border="1" width="500">
