<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" lang="pt-br">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
        <title>Carrinho</title>
    </head>
    <body>
        <header class="row mx-auto my-auto p-1">
            <div class="col-sm-2 my-auto">
                <img src="../imagens/logovideo.png" class="w-50 mt-4 mb-0">
            </div>  
            <div class="col-sm-8 text-center my-auto">
                <h1 class="font-weight-bold mt-4 mb-0" style="font-size:30px; color:#5A18C9">SEU CONTEÚDO FAVORITO ESTÁ AQUI<BR>QUANDO QUISER E ONDE ESTIVER</h1>
            </div>
            <div class="col-sm-2 my-auto">
            </div>  
        </header>
        <nav class="navbar navbar-light mb-2">
            <hr style="height:1px; width:100%; border-width:0; background-color:#5A18C9">
            <form class="form-inline mx-auto">
                <a class="navbar-brand" href="/Home"><button class="btn btn-outline-dark btn-sm" type="button">Home</button></a>                    
                <a class="navbar-brand" href="/Produtos"><button class="btn btn-outline-dark btn-sm" type="button">Produtos</button></a>
                <a class="navbar-brand" href="/Promocoes"><button class="btn btn-outline-dark btn-sm" type="button">Promoções</button></a>                    
                <a class="navbar-brand" href="/Contato"><button class="btn btn-outline-dark btn-sm" type="button">Contato</button></a>
                <a class="navbar-brand"><button class="btn btn-outline-dark btn-sm disabled" disabled>Carrinho</button></a>                    
            </form>
        </nav>
        <section class="container">
            <h1 id="tituloPagina" class="text-center" style="background-color:#E0D1FA ;"><b>Meu Carrinho</b></h1>
            <article class="mt-4 row">

                <div id="carrinho" class="row col-sm-8">
                    <div>
                        <div id="produtosAdquiridos">
                            <div class="row text-center">
                                <div class="col-sm-6">
                                    <h3 class="text-dark">Produto(s)</h3>
                                </div>
                                <div class="col-sm-2">
                                    <h3 class="text-dark">Tela(s)</h3>
                                </div>
                                <div class="col-sm-2">
                                    <h3 class="text-dark">Preço</h3>
                                </div>
                                <div class="col-sm-2">
                                    <h3 class="text-dark">Excluir</h3>
                                </div>
                            </div><hr>
                        </div>                            
                    <% item.forEach((n) => {%>
                        <div class="row" id="car<%=n.carrinho_id %>">
                            <div class="col-sm-6 row">
                                <div class="col-sm-2" style="background-color: #777;"></div>
                                <div class="col-sm-10"><%=n.titulo_fi%></div>
                            </div>
                            <div class="col-sm-2 text-right"><%=n.qtd%></div>
                            <div class="col-sm-2 text-right">R$ <%=n.valor_fi%></div>
                            <div class="col-sm-2">
                                <a type="button" class="btn"><img src="imagens/lixeira.png" class="w-25" alt=""></a>
                            </div>
                        </div>
                    <% }) %>
                    </div>
                </div>

                <div class="col-sm-4">
                    <form class="form-group p-3" style="border: 1px solid #ccc; border-radius: 12px">
                        <fieldset>
                            <div id="resumoCompra"></div>
                            <div class="row">
                                <input type="number" id="cupom" class="w-100 form-control col-sm-7 mx-auto" placeholder="Cupom de Desconto">
                                <button type="button" class="btn btn-info col-sm-3 mx-auto" id="btnCupom">Validar</button>
                            </div>
                            <div class="mt-5 text-white">
                                <button class="w-100 btn btn-danger">Continuar</button>
                            </div>
                            <div class="text-center">
                                <a href="/Produtos">Adicionar mais produtos</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
                    
            </article>
            <article>
                <div id="produtos" class="row mt-5">
                </div>
            </article>
        </section>
        <footer class="bg-dark p-4 text-warning text-center mt-4">
            <p>&copy;2022 - Todos os direitos reservados</p>
        </footer>
    </body>
    <script src="../js/carrinhoCompra.js"></script>
</html>