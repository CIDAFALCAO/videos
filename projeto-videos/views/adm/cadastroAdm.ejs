<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta lang="pt-br">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
        <title>Cadastro Adm</title>
    </head>
    <body>
        <header class="row mx-auto my-auto p-1">
            <div class="col-sm-2 my-auto">
                <img src="/public/imagens/logovideo.png" class="w-50 mt-4 mb-0">
            </div>  
            <div class="col-sm-8 text-center my-auto">
                <h1 class="font-weight-bold mt-4 mb-0" style="font-size:30px; color:firebrick">√ÅREA DO ADMINISTRADOR, SEJA BEM-VINDO!</h1>
            </div>
            <div class="col-sm-2 my-auto">
            </div>  
        </header>
    <body class="bodyLoginEContato">
        <section class="container">
            <h1 class="text-center mt-3" style="background-color:#E0D1FA ;"><b>Cadastro de Administradores</b></h1>
            <center>
            <div class="form-group mt-4">
                <form id="formRegistro" method="post" class="w-50 mx-auto" action="/CadastrarAdm" class="w-50 mx-auto p-3 mt-4 mb-5" 
                style="border:1px solid #ccc;border-radius: 12px;" onsubmit="verificaSenha(event)">
                    <fieldset class="fieldsetPersonalizado p-3 mt-3">
                        <legend class="text-center text-primary"><b>Preencha os dados para o cadastro</b></legend>
                        <div>
                            <img class="w-25" src="/public/imagens/login.png">
                        </div>
                        <div>
                            <input id="nome" class="form-control w-100 mt-3" name="nome" placeholder="Nome"/>
                            <input id="email" class="form-control w-100 mt-3" name="email" placeholder="Email" type="email" />
                            <input id="senha" class="form-control w-100 mt-3" name="senha" placeholder="Senha" type="password" />
                            <input id="senhaC" class="form-control w-100 mt-3" name="confirmacao-senha-usuario" placeholder="Confirme a senha" type="password" />
                        </div>
                            <div> 
                              <button id="btRegistro" class="mt-3 btn btn-info" type="submit">Cadastrar</button>
                        </div>        
                    </fieldset>
                </form>
            </div>
            </center>
        </section>
        <footer class="bg-dark p-4 text-warning text-center mt-4">
            <p>&copy;2022 - Todos os direitos reservados</p>
        </footer>
    </body>
    <script>
        const senha = document.getElementById('senha')
        const senhaC = document.getElementById('senhaC')


        function verificaSenha(event){
            if(senha.value == senhaC.value);
            else{
                event.preventDefault();
                alert('Senhas Diferentes!')
            }
        }
    </script>
</html